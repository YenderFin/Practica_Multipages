---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';


---

<Layout title="Welcome to CHAMOLANDIA." >
	<h1 class="text-purple-700 mx-auto text-6xl font-myfont">Slot en uso</h1>
	<div class="my-custom-class">
		My Custom Class
		<Icon class='text-7xl text-red-600 hover:text-white' name="mdi:bat" />
		
	</div>
	
	<button>Non Exists <span><Icon name="line-md:account-delete"  class='text-7xl restas' /></span></button>
	
	<div class="embla">
		<div class="embla__container">
		  <div class="embla__slide">Slide 1</div>
		  <div class="embla__slide">Slide 2</div>
		  <div class="embla__slide">Slide 3</div>
		</div>
	  </div>
</Layout>
<style>
	.embla {
  overflow: hidden;
}
.embla__container {
  display: flex;
}
.embla__slide {
  flex: 0 0 100%;
  min-width: 0;
}
</style>

<script>
	import JSConfetti from 'js-confetti'
	import EmblaCarousel from 'embla-carousel'
	import Autoplay from 'embla-carousel-autoplay'


const jsConfetti = new JSConfetti()

jsConfetti.addConfetti({
	confettiRadius:1,
	confettiNumber: 1800,

  
})


const emblaNode = document.querySelector('.embla')
const options = { loop: true }
const plugins = EmblaCarousel(emblaNode, options, [Autoplay()])
const emblaApi = EmblaCarousel(emblaNode, options, plugins)
</script>




